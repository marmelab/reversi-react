{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "mocha": true
    },
    "rules": {
        "max-len": "off",
        "func-names": "off",
        "indent": [2, 4],
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.spec.js"]}],
        "no-use-before-define": ["error", { "functions": false, "classes": true }]
    }
}
